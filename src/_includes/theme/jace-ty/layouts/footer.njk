            <div class="content">
              <h2 class="title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
              <p class="text">{{post.data.subtitle}} {{post.data.date.toISOString().split('T')[0]}}</p>
              <div class="actions">
              {% if post.data.linkText %}
                <a class="button secondary" href="{{ post.url }}">{{ post.data.linkText }}</a>
              {% endif %}
              </div>
            </div>
        </article>
    {% endfor %}
    </div>
    <div class="copyright-txt text-center">
        {{site.author}} © <span alt="{{site.lastBuildDate}}">{{site.lastBuildYear}}</span> · 
        <a href="/index.xml">RSS</a>
        <a href="https://twitter.com/{{site.twitter}}">Twitter</a>
        <a href="{{site.github}}">GitHub</a>
        <a href="{{site.linkedin}}">LinkedIn</a>
    </div> 
